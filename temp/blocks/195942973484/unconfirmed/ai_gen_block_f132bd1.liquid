{% doc %}
  @prompt
    google maps with my store name and review...  small size
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-google-map-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-google-map-container-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-google-map-header-{{ ai_gen_id }} {
    margin-bottom: 16px;
  }

  .ai-google-map-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
    font-weight: 600;
  }

  .ai-google-map-address-{{ ai_gen_id }} {
    font-size: {{ block.settings.address_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px 0;
    line-height: 1.5;
  }

  .ai-google-map-rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  .ai-google-map-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-google-map-star-{{ ai_gen_id }} {
    color: {{ block.settings.star_color }};
    width: 18px;
    height: 18px;
  }

  .ai-google-map-rating-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
  }

  .ai-google-map-review-count-{{ ai_gen_id }} {
    font-size: 13px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-google-map-iframe-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.map_height }}px;
    border: none;
    border-radius: {{ block.settings.map_border_radius }}px;
  }

  .ai-google-map-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.map_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.map_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-google-map-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-google-map-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-google-map-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-google-map-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

    .ai-google-map-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-google-map-iframe-{{ ai_gen_id }},
    .ai-google-map-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.map_height | times: 0.8 }}px;
    }
  }
{% endstyle %}

<google-map-{{ ai_gen_id }} class="ai-google-map-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-google-map-container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-google-map-header-{{ ai_gen_id }}">
        {% if block.settings.business_name != blank %}
          <h3 class="ai-google-map-title-{{ ai_gen_id }}">{{ block.settings.business_name }}</h3>
        {% endif %}

        {% if block.settings.address != blank %}
          <div class="ai-google-map-address-{{ ai_gen_id }}">{{ block.settings.address }}</div>
        {% endif %}

        {% if block.settings.show_rating %}
          <div class="ai-google-map-rating-{{ ai_gen_id }}">
            <div class="ai-google-map-stars-{{ ai_gen_id }}">
              {% for i in (1..5) %}
                {% if i <= block.settings.rating %}
                  <svg class="ai-google-map-star-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% else %}
                  <svg class="ai-google-map-star-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="opacity: 0.3;">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>
            <span class="ai-google-map-rating-text-{{ ai_gen_id }}">{{ block.settings.rating }}.0</span>
            {% if block.settings.review_count != blank %}
              <span class="ai-google-map-review-count-{{ ai_gen_id }}">({{ block.settings.review_count }} reviews)</span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.map_embed_url != blank %}
      <iframe
        class="ai-google-map-iframe-{{ ai_gen_id }}"
        src="{{ block.settings.map_embed_url }}"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        allowfullscreen
        title="Google Map showing {{ block.settings.business_name }}"
      ></iframe>
    {% else %}
      <div class="ai-google-map-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-google-map-empty-state-{{ ai_gen_id }}">
          Next, add your Google Maps embed URL
        </div>
      </div>
    {% endif %}
  </div>
</google-map-{{ ai_gen_id }}>

<script>
  (function() {
    class GoogleMap{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const iframe = this.querySelector('.ai-google-map-iframe-{{ ai_gen_id }}');
        if (iframe) {
          iframe.addEventListener('load', function() {
            console.log('Google Map loaded successfully');
          });
        }
      }
    }

    customElements.define('google-map-{{ ai_gen_id }}', GoogleMap{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Google Maps",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Business information"
    },
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show business information",
      "default": true
    },
    {
      "type": "text",
      "id": "business_name",
      "label": "Business name",
      "default": "Dr. Fix Cell Phone Repair Edmonton"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "Edmonton, AB"
    },
    {
      "type": "header",
      "content": "Reviews"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": true
    },
    {
      "type": "range",
      "id": "rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Rating",
      "default": 5
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review count",
      "default": "100"
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star color",
      "default": "#FFC107"
    },
    {
      "type": "header",
      "content": "Map"
    },
    {
      "type": "text",
      "id": "map_embed_url",
      "label": "Google Maps embed URL",
      "info": "Get the embed URL from Google Maps: Share > Embed a map > Copy HTML"
    },
    {
      "type": "range",
      "id": "map_height",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Map height",
      "default": 300
    },
    {
      "type": "range",
      "id": "map_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Map border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 500
    },
    {
      "type": "range",
      "id": "padding",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Container border radius",
      "default": 8
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#444444"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 20
    },
    {
      "type": "range",
      "id": "address_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Address size",
      "default": 14
    }
  ],
  "presets": [
    {
      "name": "Google Maps"
    }
  ]
}
{% endschema %}
