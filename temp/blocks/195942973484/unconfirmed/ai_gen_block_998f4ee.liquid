{% doc %}
  @prompt
    i want to add 5 small picture in a row with text 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-row-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-image-row-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.spacing }}px;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-image-row-item-{{ ai_gen_id }} {
    flex: 0 1 calc(20% - {{ block.settings.spacing }}px);
    min-width: 120px;
    text-align: center;
  }

  .ai-image-row-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 12px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-row-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    aspect-ratio: 1 / 1;
  }

  .ai-image-row-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-row-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-row-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-image-row-item-{{ ai_gen_id }} {
      flex: 0 1 calc(50% - {{ block.settings.spacing }}px);
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-image-row-item-{{ ai_gen_id }} {
      flex: 0 1 calc(33.333% - {{ block.settings.spacing }}px);
    }
  }
{% endstyle %}

<div class="ai-image-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-row-container-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign text_key = 'text_' | append: i
        assign image = block.settings[image_key]
        assign text = block.settings[text_key]
      %}
      
      <div class="ai-image-row-item-{{ ai_gen_id }}">
        <div class="ai-image-row-image-wrapper-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 400 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="400"
              height="400"
            >
          {% else %}
            <div class="ai-image-row-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        {% if text != blank %}
          <div class="ai-image-row-text-{{ ai_gen_id }}">{{ text }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

