{% doc %}
  @prompt
    i want to add 5 small picture in a row with text, not clickable,, make them also mobile view friendly, don't put too large for mobile viewer.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-row-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 20px 0;
  }

  .ai-image-row-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: {{ block.settings.spacing }}px;
    max-width: 100%;
  }

  .ai-image-row-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .ai-image-row-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-row-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-row-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-row-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-row-text-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-image-row-container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .ai-image-row-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<image-row-{{ ai_gen_id }} class="ai-image-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-row-container-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign text_key = 'text_' | append: i
        assign image = block.settings[image_key]
        assign text = block.settings[text_key]
      %}
      
      <div class="ai-image-row-item-{{ ai_gen_id }}">
        <div class="ai-image-row-image-wrapper-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 300 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="300"
              height="300"
            >
          {% else %}
            <div class="ai-image-row-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        
        {% if text != blank %}
          <div class="ai-image-row-text-{{ ai_gen_id }}">
            {{ text }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</image-row-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageRow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    
    customElements.define('image-row-{{ ai_gen_id }}', ImageRow{{ ai_gen_id }});
  })();
</script>

