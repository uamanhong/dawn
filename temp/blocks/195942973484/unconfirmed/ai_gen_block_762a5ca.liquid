{% doc %}
  @prompt
    3 image row without text.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-row-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-image-row__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.image_spacing }}px;
    width: 100%;
  }

  .ai-image-row__item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-row__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .ai-image-row__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-row__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 749px) {
    .ai-image-row__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_spacing }}px;
    }
  }
{% endstyle %}

<div class="ai-image-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-row__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign image = block.settings[image_key]
      %}
      
      <div class="ai-image-row__item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
            class="ai-image-row__image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-image-row__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Three image row",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Aspect ratio",
      "options": [
        {
          "value": "1 / 1",
          "label": "Square"
        },
        {
          "value": "4 / 3",
          "label": "Landscape"
        },
        {
          "value": "3 / 4",
          "label": "Portrait"
        },
        {
          "value": "16 / 9",
          "label": "Widescreen"
        }
      ],
      "default": "1 / 1"
    },
    {
      "type": "range",
      "id": "image_spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Desktop spacing",
      "default": 8
    },
    {
      "type": "range",
      "id": "mobile_spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Mobile spacing",
      "default": 8
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Three image row"
    }
  ]
}
{% endschema %}
